<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
 		http://www.springframework.org/schema/beans
 		http://www.springframework.org/schema/beans/spring-beans-3.2.xsd">

    <bean id="client" class="com.dmytro_barsuk.spring_learning.beans.Client">
        <constructor-arg value="1" />
        <constructor-arg value="John Smith"/>
    </bean>

    <bean id="eventLogger" class="com.dmytro_barsuk.spring_learning.loggers.impl.ConsoleEventLogger"/>

    <bean id="app" class="com.dmytro_barsuk.spring_learning.core.App">
        <constructor-arg ref="client"/>
        <constructor-arg ref="eventLogger"/>
    </bean>

</beans>