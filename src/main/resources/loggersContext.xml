<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
 		http://www.springframework.org/schema/beans
 		http://www.springframework.org/schema/beans/spring-beans-3.2.xsd">

    <bean id="eventLogger" class="com.dmytro_barsuk.spring_learning.loggers.impl.ConsoleEventLogger"/>

    <bean id="fileEventLogger" class="com.dmytro_barsuk.spring_learning.loggers.impl.FileEventLogger" init-method="init">
        <constructor-arg value="eventLog.log"/>
    </bean>

    <bean id="cacheFileEventLogger" class="com.dmytro_barsuk.spring_learning.loggers.impl.CacheFileEventLogger"
          destroy-method="destroy" parent="fileEventLogger">
        <constructor-arg value="5"/>
    </bean>

</beans>